<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/BLACK">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <!--<ImageView-->
            <!--android:id="@+id/imageView1"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:adjustViewBounds="true"-->
            <!--android:padding="20dp"-->
            <!--android:scaleType="centerCrop"-->
            <!--android:src="@drawable/logo" />-->

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:paddingTop="0dp"
            android:text="Your current status is set to: "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/textStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="--"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffbb33" />

        <Button
            android:id="@+id/buttonStartTime"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="10dp"
            android:background="#ff33b5e5"
            android:text="Start"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/WHITE"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonEndTime"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="#ff33b5e5"
            android:text="End"
            android:layout_marginBottom="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/WHITE"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_set_status"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="#ff33b5e5"
            android:text="Set Status"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/WHITE"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            android:visibility="visible"/>


        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:background="@color/BLACK"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textStartDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Start Time: You have not chosen a start time."
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/WHITE" />

            <TextView
                android:id="@+id/textEndDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="End Time: You have not chosen an end time."
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/WHITE" />

            <CheckBox
                android:id="@+id/checkboxEveryDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/apptheme_btn_check_holo_dark"
                android:text="Every Day"
                android:textColor="@color/WHITE" />

            <CheckBox
                android:id="@+id/checkboxRepeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/apptheme_btn_check_holo_dark"
                android:text="Repeat"
                android:textColor="@color/WHITE" />

            <TableLayout
                android:id="@+id/tableDaysOfTheWeek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textSun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:padding="10dp"
                        android:text="SUN"
                        android:textColor="#ff33b5e5"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textMon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:padding="10dp"
                        android:text="MON"
                        android:textColor="#ff33b5e5"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textTu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:padding="10dp"
                        android:text="TUE"
                        android:textColor="#ff33b5e5"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textWed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:padding="10dp"
                        android:text="WED"
                        android:textColor="#ff33b5e5"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textThu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:padding="10dp"
                        android:text="THU"
                        android:textColor="#ff33b5e5"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textFri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:padding="10dp"
                        android:text="FRI"
                        android:textColor="#ff33b5e5"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textSat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:padding="10dp"
                        android:text="SAT"
                        android:textColor="#ff33b5e5"
                        android:textStyle="bold" />
                </TableRow>
            </TableLayout>
        </LinearLayout>

        <Button
            android:id="@+id/buttonSaveTimeSetting"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="#ffffbb33"
            android:text="Save"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000000"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:layout_height="10dp" />
    </LinearLayout>

</ScrollView>