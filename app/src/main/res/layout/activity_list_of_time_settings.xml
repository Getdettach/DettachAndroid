<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff000000"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:padding="50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/logo1" />


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_status"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:layout_marginTop="50dp"
        android:paddingTop="10dp"
        android:text=""
        android:textSize="20dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffffffff" />


    <ScrollView
        android:id="@+id/scrollViewMyTimeSettings"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TableLayout
                android:id="@+id/tableTimeSettingTableLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:background="@color/BLACK"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textStartDisplay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text=" "
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/WHITE" />

                    <TextView
                        android:id="@+id/textEndDisplay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text=" "
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/WHITE" />

                    <CheckBox
                        android:id="@+id/checkboxEveryDay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Every Day"
                        android:textSize="18sp"
                        android:button="@drawable/apptheme_btn_check_holo_dark"
                        android:textColor="@color/WHITE" />

                    <CheckBox
                        android:id="@+id/checkboxRepeat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Repeat"
                        android:textSize="18sp"
                        android:button="@drawable/apptheme_btn_check_holo_dark"
                        android:textColor="@color/WHITE" />

                    <TableLayout
                        android:id="@+id/tableDaysOfTheWeek"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/textSun"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:padding="10dp"
                                android:text="SUN"
                                android:textColor="#ff33b5e5"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textMon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:padding="10dp"
                                android:text="MON"
                                android:textColor="#ff33b5e5"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textTu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:padding="10dp"
                                android:text="TUE"
                                android:textColor="#ff33b5e5"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textWed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:padding="10dp"
                                android:text="WED"
                                android:textColor="#ff33b5e5"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textThu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:padding="10dp"
                                android:text="THU"
                                android:textColor="#ff33b5e5"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textFri"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:padding="10dp"
                                android:text="FRI"
                                android:textColor="#ff33b5e5"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textSat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:padding="10dp"
                                android:text="SAT"
                                android:textColor="#ff33b5e5"
                                android:textStyle="bold" />
                        </TableRow>
                    </TableLayout>
                </LinearLayout>


            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tableTimeSettingTableLayout"
                android:gravity="center"
                android:layout_marginTop="20dp">

                <Button
                    android:id="@+id/buttonSaveTimeSetting"
                    android:layout_width="250dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="#ffffbb33"
                    android:text="Save"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#000000"
                    android:textStyle="bold" />

            </LinearLayout>




        </RelativeLayout>





    </ScrollView>

</LinearLayout>